-<button onclick="redirectUser()">Click me to go somewhere</button>

<script>
    function redirectUser() {
        let userChoice = confirm("Do you want to go to the new page?");
        if (userChoice) {
            window.location.href = "https://example.com";
} else {
            alert("You chose to stay on this page.");
}
}
</script>


-<input type="text" id="userInput" placeholder="Type yes to redirect">
<button onclick="checkInput()">Submit</button>

<script>
    function checkInput() {
        let input = document.getElementById("userInput").value;
        if (input.toLowerCase() === "yes") {
            window.location.href = "https://example.com";
} else {
            alert("You must type 'yes' to proceed.");
}
}
</script>




